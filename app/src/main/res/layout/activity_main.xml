<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_pading"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/size_img_profile"
            app:cardElevation="8dp">
            <ImageView
                android:id="@+id/imgprofile"
                android:layout_width="@dimen/size_img_profile"
                android:layout_height="@dimen/size_img_profile"
                android:src="@drawable/gato"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:layout_marginTop="@dimen/margin_top_default"
            android:textColor="@color/text_primary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeremy Salinas"
            android:textSize="@dimen/size_txt_label"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="@dimen/margin_top_default"/>

        <!-- Sección de correo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:layout_marginTop="@dimen/margin_top_default"
            android:textColor="@color/text_primary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="correo@ejemplo.com"
            android:textSize="@dimen/size_txt_label"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="@dimen/margin_top_default"/>

        <!-- Sección de teléfono -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:layout_marginTop="@dimen/margin_top_default"
            android:textColor="@color/text_primary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+52 123 456 7890"
            android:textSize="@dimen/size_txt_label"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="@dimen/margin_top_default"/>

        <!-- Sección de sitio web -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sitio Web"
            android:layout_marginTop="@dimen/margin_top_default"
            android:textColor="@color/text_primary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtwebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.exodays.com"
            android:textSize="@dimen/size_txt_label"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="@dimen/margin_top_default"/>

        <!-- Sección de ubicación -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicación"
            android:layout_marginTop="@dimen/margin_top_default"
            android:textColor="@color/text_primary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver mapa"
            android:drawableEnd="@drawable/location_icon"
            android:textSize="@dimen/size_txt_label"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="@dimen/margin_top_default"/>

        <TextView
            android:id="@+id/txtconfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuración"
            android:textSize="18sp"
            android:textColor="#6C6C6C"
            android:drawableStart="@drawable/settings_icon"
            android:layout_marginTop="@dimen/margin_top_default"
            android:drawableTint="@color/gris"/>

    </LinearLayout>
</ScrollView>
